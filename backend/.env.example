PORT=5000

# MongoDB Configuration
# Local MongoDB (if you have it installed)
# MONGODB_URI=mongodb://localhost:27017/petty_cash_db

# MongoDB Atlas (Cloud - FREE) - Paste your connection string below
# Replace <username>, <password>, and <cluster-url> with your actual values
# Example: MONGODB_URI=mongodb+srv://admin:password123@cluster0.xxxxx.mongodb.net/petty_cash_db?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-url>.mongodb.net/petty_cash_db

# JWT Configuration - CHANGE IN PRODUCTION!
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d
NODE_ENV=development

# Email Configuration for OTP and Reports
# To get Gmail app password:
# 1. Go to Google Account > Security
# 2. Enable 2-Step Verification
# 3. Go to Security > App passwords
# 4. Generate password for "Mail" app
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-16-digit-app-password
EMAIL_FROM="Pettyca$h <noreply@company.com>"

# CEO Email for Admin Reports
CEO_EMAIL=ceo@yourcompany.com

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3001

# File Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

